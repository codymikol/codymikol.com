{% model 'work' %}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cody Mikol</title>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Caveat&display=swap" rel="stylesheet">
    <style>

        :root {
            --code-font: JetBrains Mono, 'Courier New';
            --handwritten-font: Caveat, cursive;
            --dark-color: #363F39;
            --primary-color: #30B484;
            --gray-shade-1: #828282;
        }

        @font-face {
            font-family: "JetBrains Mono";
            src: url("/font/JetBrainsMono-1.0.3/web/eot/JetBrainsMono-Regular.eot");
            src: url("/font/JetBrainsMono-1.0.3/web/woff/JetBrainsMono-Regular.woff") format("woff");
        }

        body {
            margin: 0;
        }

        nav {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            height: 72px;
        }

        nav * a,a:visited {
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 20px;
            line-height: 24px;
            text-align: center;
            margin-right: 40px;
            text-decoration: none;
            color: black;
        }

        nav * a:last-child {
            margin-right: 80px;
        }

        nav * a:active,a:hover {
            color: #13AA52;
            text-decoration: underline;
        }

        .formatted-name {
            color: var(--gray-shade-1);
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 29px;
            line-height: 29px;
            text-align: center;
            margin: 21px 0 22px 40px;
            display: flex;
            align-items: center;
        }

        .formatted-name > img {
            margin: 8px;
        }

        main {
            margin-top: 108px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        main > div {
            display: flex;
            justify-content: flex-end;
            width: 100%;
            margin-top: 17px;
        }

        main > * {
            max-width: 1040px;
        }

        main > p {
            font-family: JetBrains Mono, sans-serif;
            font-style: normal;
            font-weight: normal;
            font-size: 48px;
            line-height: 60px;
            margin: 0;
        }

        .rotated-link {
            font-family: var(--handwritten-font);
            display: block;
            font-style: normal;
            font-weight: normal;
            font-size: 48px;
            line-height: 48px;
            text-decoration-line: underline;
            color: #13AA52;
            transform: rotate(-8deg);
        }

        .project-container {
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin: 80px 100px 0 80px;
            max-width: 1404px;
        }

        .project * img {
            width: 100%;
            margin-top: 42px;
        }

        .project {
            width: calc(50% - 80px);
            margin: 0 40px 0 40px;
            display: flex;
            flex-direction: column;
        }

        .project > h2 {
            text-align: center;
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 32px;
            line-height: 42px;
            margin: 16px 0 8px 0;
            padding: 0;
        }

        .project > p {
            text-align: center;
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 20px;
            line-height: 24px;
            color: #13AA52;
            margin: 8px 0 0 0;
            padding: 0;
        }

        .about-container {
            color: white;
            position: relative;
            margin-top: 148px;
            display: flex;
            flex-direction: row;
            background-color: #13AA52;
            width: 100%;
            min-height: 666px;
            max-width: 100%;
        }

        .about-container > div {
            width: 50%;
        }

        .about {
            display: flex;
            justify-content: center;
            text-align: left;
        }

        .about * h2 {
            margin-top: 120px;
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 48px;
            line-height: 60px;
        }

        .about * p {
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 20px;
            line-height: 24px;
        }

        .about * li {
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 20px;
            line-height: 24px;
            margin: 6px;
        }

        .about * ul {
            padding: 0;
            width: 50%;
        }

        .about-inner {
            max-width: 500px;
        }

        .portrait {
            position: relative;
        }

        .me {
            position: absolute;
            top: -39px;
            left: 0;
        }

        .smile-boi {
            color: white;
            position: absolute;
            bottom: 147px;
            left: 464px;
        }

        .skills {
            display: flex;
            flex-direction: row;
        }

        section.footer {
            display: flex;
            flex-direction: column;
            height: 376px;
            align-items: center;
        }

        .portrait p {
            position: absolute;
            bottom: 75px;
            left: 165px;
            color: white;
        }

        .copyright {
            font-family: var(--code-font);
            font-style: normal;
            font-weight: normal;
            font-size: 20px;
            line-height: 24px;
            text-align: center;
            color: #828282
        }

        .get-in-touch {
            margin-top: 56px;
        }

        .bottom-container {
            height: 85px;
            margin-bottom: 60px;
            margin-top: 98px;
        }

        .contact-icon-container {
            display: flex;
            justify-content: center;
        }

        .contact-icon-container * button {
            background: none;
            border: none;
            margin: 0 22px 0 22px;
            padding: 0;
            cursor: pointer;
            outline: none;
            fill: #13AA52;
        }

        .contact-icon-container * a {
            text-decoration: none;
        }

        .contact-icon-container * path {
            fill: #828282;
        }

        .contact-icon-container * button:hover * path {
            fill: #13AA52;
        }

        .contact-icon-container * button:active * path {
            fill: #13c051;
        }

    </style>

</head>
<body>

<nav>
    <div class="formatted-name">
        { <img src="assets/images/smile.svg" alt="Have a wonderful day c:"> }
    </div>
    <div>
        <a href="#about">About</a>
        <a href="#work">Work</a>
        <!-- <a>Contact</a> -->
    </div>
</nav>

<main>
    <p>Hey üëãüèª I‚Äôm Cody,a software engineer based in Bethlehem, PA. My hobby is programming, so I work after work, and
        then wake up and work some more.</p>
    <div>
        <a class="rotated-link">Ok, show me the work</a>
    </div>
    <section id="work" class="project-container">
        {% for project in projects limit: 10 %}
            <div class="project">
                <a class="mt-4 og-project" href="{{ project.link }}" target="_blank">
                    <img src="assets/ogs/og-{{ project.name }}.png" alt="{{ project.title }}">
                </a>
                <h2>{{ project.title }}</h2>
                <p class="text-center text-mono text-green text-base md:text-left">{{ project.tech }}</p>
            </div>
        {% endfor %}
    </section>
    <section class="about-container">
        <div id="about" class="about">
            <div class="about-inner">
                <h2>About Cody</h2>
                <p>
                    Software Engineer currently doing R&D at Jack Henry and Associates. Most spare time is spent hacking
                    on side projects with <a style="color: white" href="http://justshipped.io" target="_blank">JustShipped</a> or contributing to various FOSS projects.
                </p>
                <p>Here are a few technologies I&apos;ve been working with recently</p>
                <div class="skills">
                    <ul>
                        <li>Svelte</li>
                        <li>React</li>
                        <li>AngularJS</li>
                        <li>Vanilla JS</li>
                    </ul>
                    <ul>
                        <li>Kotlin</li>
                        <li>Go</li>
                        <li>NodeJS</li>
                        <li>Java</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="portrait">
            <img class="me" src="assets/images/cody.png" alt="A picture of me Cody Mikol, very exciting stuff!">
            <p class="rotated-link">I don‚Äôt look this<br/> serious in real life</p>
            <img class="rotated-link smile-boi" src="assets/images/white-smile.svg" alt="Have a wonderful day c:">
        </div>
    </section>
    <section class="footer">
        <div style="display: flex; flex-direction: row">
            <p class="get-in-touch rotated-link">Get in touch</p>
            <img src="assets/images/arrow.svg" style="transform: translate(15px, -22px);"
                 alt="Its an arrow pointing at me, how exciting is that?">
        </div>
        <div class="bottom-container">
            <div class="contact-icon-container">
                <div>
                    <a href="https://www.linkedin.com/in/cody-mikol-684a32b3/" target="_blank">
                        <button>{% include '../partials/_linkedin' %}</button>
                    </a>
                    <a href="https://github.com/codymikol" target="_blank">
                        <button>{% include '../partials/_github' %}</button>
                    </a>
                    <a href="mailto:codymikol@gmail.com" target="_blank">
                        <button>{% include '../partials/_mail' %}</button>
                    </a>
                </div>
            </div>
            <p class="copyright">¬© 2020 Cody Mikol. All rights reserved.</p>
        </div>
    </section>
</main>

</body>
</html>